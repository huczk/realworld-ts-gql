{
  "name": "node-typescript-graphql",
  "version": "1.0.0",
  "description": "realworld app",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc --build tsconfig.json",
    "start": "node dist/index.js",
    "prettier": "prettier --write \"src/**/*.{ts,js,json}\"",
    "test": "jest",
    "test:local": "cd tests && docker-compose up --force-recreate -d && cd ../ && sh tests/wait-for-sql.sh && yarn test",
    "schema": "docker-compose exec -T web yarn schema:build && git add src/schema.gql",
    "schema:build": "ts-node src/buildSchema.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn schema"
    }
  },
  "author": "huczk",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^24.9.0",
    "@types/jsonwebtoken": "^8.3.6",
    "@types/mysql": "^2.15.8",
    "@types/node": "^13.1.7",
    "@types/slug": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "ts-node": "8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "3.7.4"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.16",
    "bcrypt": "^3.0.7",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "graphql-fields-list": "^2.1.2",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.17.1",
    "reflect-metadata": "^0.1.13",
    "slug": "^2.1.0",
    "type-graphql": "^0.18.0-beta.9",
    "typeorm": "^0.2.22"
  }
}
